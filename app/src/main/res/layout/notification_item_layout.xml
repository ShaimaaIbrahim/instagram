<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="notification"
            type="com.example.instagram.model.Notification" />
    </data>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_marginEnd="6dp"
    android:layout_marginStart="6dp"
    android:layout_marginBottom="6dp"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/notification_profile_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/profile" />
    <LinearLayout
        android:layout_toStartOf="@+id/notification_post_image"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/notification_profile_image"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<TextView
    android:text="username"
    android:textSize="18dp"
    android:textColor="@android:color/black"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/username_notification"/>
        <TextView
            android:text="comment"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comment_notification"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/notification_post_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
         android:layout_alignParentEnd="true"
        />
</RelativeLayout>
</layout>